          "playing": "ÔÅã",
          "stopped": "ÔÅç"
      }
  },

 // separator

  "custom/separator": {
    "format": "   ",
    "interval": "once",
    "tooltip": false
  },

  // network

  "network": {
    "format-wifi": "Ôá´",
